<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvImage__PopularListItem"
            android:background="@color/teal_200"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="80dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/txvTitle__PopularListItem"
            android:text="Title"
            android:textSize="32sp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/imvImage__PopularListItem"
            app:layout_constraintTop_toTopOf="@id/imvImage__PopularListItem"
            app:layout_constraintBottom_toTopOf="@+id/txvDateMin_PopularListItem"
            android:layout_width="320dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txvDateMin_PopularListItem"
            android:text="date min"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            app:layout_constraintStart_toStartOf="@+id/txvTitle__PopularListItem"
            app:layout_constraintTop_toBottomOf="@id/txvTitle__PopularListItem"
            app:layout_constraintBottom_toTopOf="@id/txvRunTime_PopularListItem"
            android:layout_width="320dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txvRunTime_PopularListItem"
            android:text="run time"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            app:layout_constraintStart_toStartOf="@id/txvTitle__PopularListItem"
            app:layout_constraintTop_toBottomOf="@id/txvDateMin_PopularListItem"
            app:layout_constraintBottom_toBottomOf="@id/imvImage__PopularListItem"
            android:layout_width="320dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txvPopularitye_PopularListItem"
            android:text="Rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvImage__PopularListItem"
            app:layout_constraintBottom_toBottomOf="@id/imvImage__PopularListItem"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>